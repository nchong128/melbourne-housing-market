{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Factors choropleth map",
    "width": 800,
    "height": 600,
    "projection": {
      "type": "mercator"
    },
    "params": [
        {
            "name": "factor_selection",
            "bind" : {
                "input": "select",
                "options": [
                    "Distance",
                    "Rooms",
                    "Bathroom",
                    "Car",
                    "Landsize",
                    "BuildingArea"
                ],
                "labels": [
                    "Distance from CBD (km)",
                    "Number of rooms",
                    "Number of bathrooms",
                    "Number of car spots",
                    "Property land size",
                    "Property building area"
                ],
                "name": "Factor: "
            }
        }  
    ],
    "layer": [
      {
        "data": {
          "url": "data/inner_vic_localities.topojson",
          "format": {
                "type": "topojson",
                "feature": "vic_localities"
              }
          },
        "mark": {
          "type": "geoshape",
          "fill": "lightgray",
          "stroke": "white"
        }
      },
      {
        "data": {
          "url": "data/inner_vic_localities.topojson",
          "format": {
            "type": "topojson",
            "feature": "vic_localities"
          }
        },
        "transform": [
            {
                "filter": "factor_selection == null || factor_selection == 'Distance'"
            },
          {
          "lookup": "properties.LOC_NAME",
          "from": {
            "data": {
              "url": "data/meanSuburbValues.csv"
            },
            "key": "Suburb",
            "fields": [
                    "Propertycount",
                    "Postcode",
                    "Price",
                    "Suburb",
                    "Rooms",
                    "Landsize",
                    "Bathroom",
                    "Car",
                    "Distance"
                ]
            }
          }
        ],
        "mark": {
          "type": "geoshape"
        },
        "encoding": {
          "color": {
            "field": "Distance",
            "type": "quantitative",
            "legend": {
             "title": "Distance"   
            }
          },
          "tooltip": [
            {"field": "properties.LOC_NAME", "type": "nominal", "title": "Suburb"},
            {"field": "Postcode", "type": "nominal", "title": "Post code"},
            {"field": "Price", "type": "quantitative", "title": "Average property price"},
            {"field": "Propertycount", "type": "quantitative", "title": "Property count"}
          ]
        }
      }
    ]
  }
  