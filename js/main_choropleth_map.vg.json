{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Average house prices of Melbourne suburbs",
    "width": 800,
    "height": 600,
    "projection": {
      "type": "mercator"
    },
    "layer": [
      {
        "data": {
          "url": "data/inner_vic_localities.topojson",
          "format": {
                "type": "topojson",
                "feature": "vic_localities"
              }
          },
        "mark": {
          "type": "geoshape",
          "fill": "lightgray",
          "stroke": "white"
        }
      },
      {
        "data": {
          "url": "data/inner_vic_localities.topojson",
          "format": {
            "type": "topojson",
            "feature": "vic_localities"
          }
        },
        "transform": [
          {
          "lookup": "properties.LOC_NAME",
          "from": {
            "data": {
              "url": "data/meanSuburbValues.csv"
            },
            "key": "Suburb",
            "fields": ["Propertycount", "Postcode", "Price","Suburb", "Rooms", "Landsize"]
          }
        },
        {
          "filter": "datum.Price>0"
        },
        {
          "calculate": "datum.Rooms/datum.Landsize",
          "as": "Rooms per property size"
        }
      ],
        "mark": {
          "type": "geoshape"
        },
        "encoding": {
          "color": {
            "field": "Price",
            "type": "quantitative",
            "scale": {
              "type":"threshold",
              "domain":[500000, 750000, 1000000, 2000000],
              "range":["#f1eef6", "#bdc9e1","#74a9cf","#2b8cbe", "#045a8d"]
            }
          },
          "tooltip": [
            {"field": "properties.LOC_NAME", "type": "nominal", "title": "Suburb"},
            {"field": "Postcode", "type": "nominal", "title": "Post code"},
            {"field": "Price", "type": "quantitative", "title": "Average property price"},
            {"field": "Propertycount", "type": "quantitative", "title": "Property count"}
          ]
        }
      }
    ]
  }
  