{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 650,
    "height": 600,
    "projection": {
      "type": "mercator",
      "center": [145, -37.95]
    },
    "params": [
      {
        "name": "suburb_selection",
        "bind": {
          "element": "#suburb_input",
          "debounce": 0
        }
      }
    ],
    "layer": [
      {
        "data": {
          "url": "data/inner_vic_localities.topojson",
          "format": {
                "type": "topojson",
                "feature": "vic_localities"
              }
          },
        "mark": {
          "type": "geoshape",
          "fill": "lightgray",
          "stroke": "white"
        }
      },
      {
        "data": {
          "url": "data/inner_vic_localities.topojson",
          "format": {
            "type": "topojson",
            "feature": "vic_localities"
          }
        },
        "transform": [
          {
            "lookup": "properties.LOC_NAME",
            "from": {
              "data": {
                "url": "data/meanSuburbValues.csv"
              },
              "key": "Suburb",
              "fields": ["Propertycount", "Postcode", "Price","Suburb", "Rooms", "Landsize"]
            }
          },
          {
            "filter": "datum.Price>0"
          },
          {
            "calculate": "datum.Rooms/datum.Landsize",
            "as": "Rooms per property size"
          },
          {
            "filter": "suburb_selection == '' || datum.Suburb == suburb_selection"
          }
        ],
        "mark": {
          "type": "geoshape"
        },
        "encoding": {
          "color": {
            "field": "Price",
            "type": "quantitative",
            "scale": {
              "scheme": "inferno", "reverse": true
            }
          },
          "tooltip": [
            {"field": "properties.LOC_NAME", "type": "nominal", "title": "Suburb"},
            {"field": "Postcode", "type": "nominal", "title": "Post code"},
            {"field": "Price", "type": "quantitative", "title": "Average property price", "format": "$,.0f" },
            {"field": "Propertycount", "type": "quantitative", "title": "Number of properties"}
          ]
        }
      },
      {
        "data": {
          "url": "data/inner_vic_localities.topojson",
          "format": {
            "type": "topojson",
            "feature": "vic_localities"
          }
        },
        "transform": [
          {
            "lookup": "properties.LOC_NAME",
            "from": {
              "data": {
                "url": "data/meanSuburbValues.csv"
              },
              "key": "Suburb",
              "fields": ["Propertycount", "Postcode", "Price","Suburb", "Rooms", "Landsize"]
            }
          },
          {
            "filter": "datum.Price>0"
          },
          {
            "calculate": "datum.Rooms/datum.Landsize",
            "as": "Rooms per property size"
          }
        ],
        "mark": {
          "type": "text"
        },
        "encoding": {
          "text": {
            "value": "6 suburbs rose to the top 10 from 2017"
          },
          "longitude": {
            "field": "Longitude"
          }
        }
      }
    ]
  }
  